// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  password    String
  sessions    Sessions[]
  credentials Credentials[]
  safenotes   Safenotes[]
  cards Cards[]
}

model Sessions {
  id     Int    @id @default(autoincrement())
  user   Users  @relation(fields: [userId], references: [id])
  userId Int
  token  String @unique
}

model Credentials {
  id       Int    @id @default(autoincrement())
  title    String
  url      String
  username String
  password String
  user     Users  @relation(fields: [userId], references: [id])
  userId   Int
}

model Safenotes {
  id     Int    @id @default(autoincrement())
  title  String
  note   String
  user   Users  @relation(fields: [userId], references: [id])
  userId Int
}

model Cards {
  id     Int    @id @default(autoincrement())
  title String
  number String
  name String
  cvc String
  expiration String
  password String
  isVirtual Boolean
  type String
  user   Users  @relation(fields: [userId], references: [id])
  userId Int
}